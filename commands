# bash-commands for simple and fast debugging ; for personal use   ;
# use -> "source commands" to implement

alias cls="clear"
alias run="python3 "
alias update="sudo apt update -y"
alias download="echo 'Installing required packages\n' \
            && pip install llama-cpp-python keyboard pyautogui plyer torch transformers speechRecognition pycaw pyttsx3 requests python-vlc yt_dlp screen_brightness_control dateparser --quiet \
            && echo 'Installed required packages \n' \
            && echo done!"

alias create="cls \
            && update \
            && download \
            && curl -L https://huggingface.co/DavidAU/L3.1-Dark-Planet-SpinFire-Uncensored-8B-GGUF/resolve/main/L3.1-Dark-Planet-SpinFire-Uncensored-8B-D_AU-Q3_k_s.gguf?download=true -o FILES/model/Chat_model.gguf \
            && echo 'All installed!\nReady to start!\n'
            "
                